@inherits NancyRazorViewBase<SuccessModel>
<!DOCTYPE html>
<html lang="en">

<head>
	<title>PiMMORPG - Register</title><meta charset="UTF-8" />
	<base href="@WebServer.Configuration.Url" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="stylesheet" href="css/bootstrap.min.css" />
	<link rel="stylesheet" href="css/bootstrap-responsive.min.css" />
	<link rel="stylesheet" href="css/matrix-login.css" />
	<link href="font-awesome/css/font-awesome.css" rel="stylesheet" />
	<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,800' rel='stylesheet' type='text/css'>

</head>
<body>
	<div id="loginbox">            
		<form class="form-vertical" action="" method="post">
			<div class="control-group normal_text"> <h3><img src="img/logo.png" alt="Logo" /></h3></div>
			@if(Model != null)
			{
			if(Model.Success)
			{
			<div class="alert alert-success alert-block">
				<h4 class="alert-heading">Success!</h4>
				
				@Model.Message
			</div>
		}
		else
		{
		<div class="alert alert-error alert-block">
			<h4 class="alert-heading">Error!</h4>

			@Model.Message
		</div>
	}
}

<div class="controls">
	<div class="main_input_box">
		<span class="add-on bg_lg"><i class="icon-user"> </i></span><input type="text" name="username" placeholder="Username" />
	</div>
</div>
<div class="controls">
	<div class="main_input_box">
		<span class="add-on bg_ly"><i class="icon-lock"></i></span><input type="password" name="password" placeholder="Password" />
	</div>
</div>
<div class="controls">
	<div class="main_input_box">
		<span class="add-on bg_ly"><i class="icon-lock"></i></span><input type="password" name="repeat-password" placeholder="Repeat Password" />
	</div>
</div>
<div class="controls">
	<div class="main_input_box">
		<span class="add-on bg_lg"><i class="icon-user"> </i></span><input type="text" name="nickname" placeholder="Nickname" />
	</div>
</div>

<div class="form-actions">
	<span class="pull-left"><a href="/secure/login" class="flip-link btn btn-success" id="to-login">&laquo; Back to login</a></span>
	<span class="pull-right"><button type="submit" name="register" class="btn btn-info"/>Register</a></span>
</div>
</form>
</div>

<script src="js/jquery.min.js"></script>  
<script src="js/matrix.login.js"></script> 
</body>

</html>
